---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {{ page.title }}
      <a
        href="{{ 'assets/pdf/degenaro.pdf' | relative_url }}"
        target="_blank"
        rel="noopener noreferrer"
        class="float-right"
        title="Download CV"
      >
        <i class="fa-solid fa-file-pdf"></i>
      </a>
    </h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>

  <article>
    <div class="cv-container">
      <!-- Download button -->
      <div class="text-center mb-4">
        <a
          href="{{ 'assets/pdf/degenaro.pdf' | relative_url }}"
          class="btn btn-primary"
          download="degenaro_cv.pdf"
        >
          <i class="fa-solid fa-download me-2"></i>Download CV
        </a>
      </div>

      <!-- PDF Embed -->
      <div class="pdf-embed">
        <embed
          src="{{ 'assets/pdf/degenaro.pdf' | relative_url }}"
          type="application/pdf"
          width="100%"
          height="800px"
          style="border: 1px solid #ddd; border-radius: 8px;"
        />
      </div>

      <!-- Fallback for browsers that don't support embed -->
      <div class="pdf-fallback text-center mt-3" style="display: none;">
        <p>Your browser doesn't support PDF viewing.</p>
        <a
          href="{{ 'assets/pdf/degenaro.pdf' | relative_url }}"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-outline-primary"
        >
          Open CV in New Tab
        </a>
      </div>
    </div>

    <script>
      // Show fallback if embed fails to load
      document.querySelector('embed').addEventListener('error', function() {
        document.querySelector('.pdf-fallback').style.display = 'block';
      });
    </script>
  </article>
</div>